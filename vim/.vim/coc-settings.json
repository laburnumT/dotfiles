{
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "filetypes": ["haskell", "lhaskell"]
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"]
    },
    "rascal": {
      "command": "rascal-lsp",
      "filetypes": ["rascal"]
    }
  }
}
